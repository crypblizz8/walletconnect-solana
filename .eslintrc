{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "plugin:require-extensions/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "require-extensions"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
    },
    "overrides": [
        {
            "files": [
                "packages/app/**/*"
            ],
            "rules": {
                "require-extensions/require-extensions": "off"
            }
        }
    ]
}
